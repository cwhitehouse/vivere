<%
  // col-span-2 row-span-6

  let exampleClass = ''
  if (example.width === 2)
    exampleClass += 'lg:col-span-2';

  if (example.height === 6)
    exampleClass += ' lg:row-span-6';

  let exampleBodyClass;
  if (!!example.gray)
    exampleBodyClass = 'bg-gray-50';
  else
    exampleBodyClass = 'bg-white';
%>

<div class="<%= exampleClass %>">
  <div class="border-2 rounded flex flex-col items-stretch <%= exampleBodyClass %>">
    <p class="border-b-2 font-semibold text-center py-3 px-8 bg-white"><%= example.name %></p>
    <div class="flex flex-col items-stretch p-8">
      <%- include(`/examples/${id}/${example.id}`) %>
    </div>
    <div class="border-t-2 flex items-center py-2 px-3 bg-white space-x-1 text-sm">
      <a
        href="https://github.com/cwhitehouse/vivere/blob/main/examples/includes/examples/<%= example.group %>/<%= example.id %>.ejs"
        class="text-link green p-1"
        target="_blank"
      ><%= example.id %>.ejs</a>
      <% if (!!example.partials.length) { %>
        <% for (partial of example.partials) { %>
          <a
            href="https://github.com/cwhitehouse/vivere/blob/main/examples/includes<%= partial %>"
            class="text-link green p-1"
            target="_blank"
          ><%= partial.split('/').pop() %></a>
        <% } %>
      <% } %>
      <% if (!!example.scripts.length) { %>
        <% for (script of example.scripts) { %>
          <a
            href="https://github.com/cwhitehouse/vivere/blob/main/<%= script %>"
            class="text-link p-1"
            target="_blank"
          ><%= script.split('/').pop() %></a>
        <% } %>
      <% } %>
    </div>
  </div>
  <div class="flex flex-wrap items-center mt-1 ml-2 mr-1">
    <%- include('/tags', { tags: (example.tags || []) }) %>
  </div>
</div>
