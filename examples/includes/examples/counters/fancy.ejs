<div
  v-component="fancy-counter"
  class="flex items-center"
>
  <button
    @click="$log('Decrementing the count...'); decrementCount()"
    :disabled="!canDecrement"
    class="button"
  >-</button>
  <p
    :text="count"
    v-class:text-red-600.font-medium="countHigh"
    class="flex-1 text-center"
  ></p>
  <button
    @click="incrementCount; $log('Incrementing the count...')"
    class="button"
  >+</button>
</div>
