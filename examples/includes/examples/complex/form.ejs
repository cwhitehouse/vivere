<div
  v-component
  v-data:saving="false"
  v-data:text="null"
>
<p>Form submission will be interruped and the form disabled...</p>
<form
  v-ref="form"
  v-event:submit.prevent="saving = true"
  class="flex items-center space-x-2 mt-4"
>
  <input
    v-sync="text"
    v-disabled="saving"
    type="text"
    placeholder="Required!"
    class="flex-1"
  />
  <button
    v-disabled="saving"
    v-event:click.prevent="text?.length ? saving = true"
    class="button w-32"
  >
    <span
      v-text="saving ? '⏳' : 'Submit'"
      v-class:animate-spin="saving"
      class="inline-block"
    ></span>
  </button>
  <button
    v-disabled="!saving"
    v-event:click.prevent="saving = false"
    class="button w-32"
  >Cancel</button>
</form>
</div>