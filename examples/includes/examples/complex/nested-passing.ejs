<div
  *component="ComplexNestedContainerA"
  class="flex flex-col items-center justify-center"
>
  <p :text="communique || 'Choose a phrase to display...'"></p>
  <div
    *component="ComplexNestedContainerB"
    #has-message="message != null"
    #message="$parent.communique"
    class="flex items-center space-x-4 mt-4"
  >
    <button
      *component
      #phrase="'hello'"
      #message="$parent.message"
      @click="message = phrase"
      class="button"
    >Hello</button>
    <button
      *component
      #phrase="'goodbye'"
      #message="$parent.message"
      @click="message = phrase"
      class="button"
    >Goodbye</button>
  </div>
</div>