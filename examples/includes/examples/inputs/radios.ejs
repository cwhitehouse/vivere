<div
  *component
  #text="null"
  class="flex items-center space-x-4"
>
  <div class="flex-1 flex flex-col space-y-2">
    <div class="flex items-center space-x-2">
      <input
        *sync="text"
        id="item-a"
        type="radio"
        name="text"
        value="Item A"
      />
      <label for="item-a">Item A</label>
    </div>

    <div class="flex items-center space-x-2">
      <input
        *sync="text"
        id="item-b"
        type="radio"
        name="text"
        value="Item B"
      />
      <label for="item-b">Item B</label>
    </div>

    <div class="flex items-center space-x-2">
      <input
        *sync="text"
        id="item-c"
        type="radio"
        name="text"
        value="Item C"
      />
      <label for="item-c">Item C</label>
    </div>
  </div>
  <div class="flex-1">
    <p
      :text="text"
      class="w-full"
    ></p>
  </div>
  <div class="flex flex-col space-y-2">
    <button
      @click="text = 'Item A'"
      class="button"
    >Reset</button>
    <button
      @click="text = null"
      class="button"
    >Off</button>
  </div>
</div>
