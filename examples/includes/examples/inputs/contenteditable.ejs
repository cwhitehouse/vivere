<div
  v-component
  v-data:text="null"
  class="flex items-center space-x-4"
>
  <div class="flex-1">
    <p
      v-sync="text"
      v-event:keydown.esc="$refs.text.blur"
      v-ref="text"
      placeholder="Try typing some text..."
      contenteditable=""
    ></p>
  </div>
  <div class="flex-1">
    <p
      v-attr:text="text"
      class="w-full"
    ></p>
  </div>
  <button
    v-event:click="text = 'Reset contenteditable...'"
    class="button"
  >Reset</button>
</div>
