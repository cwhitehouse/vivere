<div
  *component
  #tab="b"
>
  <div class="fiex items-center space-x-1">
    <% ['a', 'b', 'c'].forEach(tab => { %>
      <button
        @click="tab = '<%= tab %>'"
        :class.bg-white="tab === '<%= tab %>'"
        :class.bg-gray-200.hover:bg-indigo-100.hover:border-indigo-100.text-gray-600="tab !== '<%= tab %>'"
        class="w-24 h-10 border-t-2 border-l-2 border-r-2 border-solid border-gray-200 rounded-t"
      >Tab <%= tab.toUpperCase(); %></button>
    <% }); %>
  </div>
  <div
    class="bg-white border-2 rounded p-8"
    style="margin-top: -2px;"
  >
    <p *if="tab === 'a'">Displaying content for Tab A...</p>
    <p *else-if="tab === 'b'">Displaying content for Tab B...</p>
    <p *else>Displaying content for Tab C...</p>
  </div>
</div>
