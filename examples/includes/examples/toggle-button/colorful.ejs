<button
  *component="ToggleButtonColorful"
  :class="buttonClass"
  :text="buttonText"
  @click="on = !on"
  @before-connected="$log('LifecycleCallbacks # beforeConnected')"
  @connected="$log('LifecycleCallbacks # connected')"
  @rendered="$log('LifecycleCallbacks # rendered')"
  @before-dehydrated="$log('LifecycleCallbacks # beforeDehydrated')"
  @before-destroyed="$log('LifecycleCallbacks # beforeDestroyed')"
  @dehydrated="$log('LifecycleCallbacks # dehydrated')"
  @destroyed="$log('LifecycleCallbacks # destroyed')"
  class="transform transition-all rounded shadow-md font-medium px-4 py-2 cursor-pointer border border-gray-400"
></button>
