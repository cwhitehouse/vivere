---
layout: default
---

<div class="grid grid-cols-2 gap-8">
  <!-- BASIC COUNTER -->
  <div class="border-2 rounded bg-white flex flex-col items-stretch">
    <p class="border-b-2 font-semibold text-center py-3 px-8">Hover Image</p>
    <div
      class="mx-auto p-8"
      v-component
      v-data:hovering="false"
      v-data:src="https://s3.amazonaws.com/kippy.online/kullect.png"
      v-data:alt-src="https://s3.amazonaws.com/kippy.online/kullect.gif"
    >
      <img
        class="h-64 w-64 object-cover"
        v-src="hovering && !!altSrc ? altSrc : src"
        v-event:mouseenter="hovering = true"
        v-event:mouseleave="hovering = false"
      />
      <p class="text-center mt-4">
        <span v-if="hovering">Hovering!</span>
        <span v-if="!hovering && !!altSrc">Try hovering...</span>
      </p>
    </div>
  </div>
</div>
