---
layout: default
---

<div class="grid grid-cols-2 gap-8">
  <!-- BASIC COUNTER -->
  <div>
    <div class="border-2 rounded bg-white flex flex-col items-stretch">
      <p class="border-b-2 font-semibold text-center py-3 px-8">Toggle Button</p>
      <div class="p-8 flex flex-col items-center">
        <button
          class="button"
          v-component
          v-data:on="false"
          v-text="on ? 'On' : 'Off'"
          v-event:click="on = !on"
        ></button>
      </div>
    </div>
    <div class="flex flex-wrap items-center mt-1 ml-2 mr-1">
      <%- include('/tags', { tags: ['V-DATA', 'v-EVENT', 'V-TEXT'] }) %>
    </div>
  </div>
</div>

